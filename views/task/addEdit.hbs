
<form action='/task' autocomplete='off' method='post' id="addedittask">
      <h2 class="text-muted text-centre">{{viewTitle}}</h2>
    <div class='form-group'> 
                <input type="hidden" name="_id" value="{{task._id}}">  
                <label for="fname">Task Name : </label>
                <input type="text" id="fname" name="taskName" value="{{task.taskName}}" class="form-control" required><br>
    </div>
    <div class='form-group'>
                <label for="lname">Task Description : </label>
                <input type="text" id="lname" name="taskDesc" value="{{task.taskDesc}}" class="form-control" required><br>
                 <br>
                <button type="submit" class="btn btn-info">Submit</button> <a href="\task\list" class="btn btn-info">View Task</a>
    </div>            
</form>
