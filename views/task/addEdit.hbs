
<h2>{{viewTitle}}</h2>
<form action='/task' autocomplete='off' method='post' id="addedittask" style="display: flex; flex-direction: column; align-items: center;padding: 50px 60px;color: white;
    background: rgba(0, 0, 0, 0.8);
    border-radius: 10px;
    box-shadow: 0 0.4px 0.4px rgba(128, 128, 128, 0.109),
      0 1px 1px rgba(128, 128, 128, 0.155),
      0 2.1px 2.1px rgba(128, 128, 128, 0.195),
      0 4.4px 4.4px rgba(128, 128, 128, 0.241),
      0 12px 12px rgba(128, 128, 128, 0.35)">
    <div class='form-group'>
                 <input type="hidden" name="_id" value="{{task._id}}">  
                <label for="fname">Task Name :</label><br>
                <input type="text" id="fname" name="taskName" value="{{task.taskName}}" required><br>
    </div>
    <div class='form-group'>
                <label for="lname">Task Description :</label><br>
                <input type="text" id="lname" name="taskDesc" value="{{task.taskDesc}}" required><br>
                 <br>
                <button type="submit" class="btn">Submit</button>
    </div>              
</form>
<a href="\task\list">View List</a>