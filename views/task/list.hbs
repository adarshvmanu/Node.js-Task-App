<h3 class="text-muted text-center">List Page</h3>
<table class="table table-striped">
    <thead class="text-muted">
        <tr>
            <th>Task Name</th>
            <th>Task Description</th>
        </tr>
    </thead>
    <tbody style="border: 3px; color=#ffffff">
         {{#each list}}
         <tr>
             <td>{{this.taskName}}</td>
             <td>{{this.taskDesc}}</td>
             <td>
                 <a class="btn btn-info" href="/task/edit/{{this._id}}">Edit</a>
                 <a class="btn btn-info" href="/task/delete/{{this._id}}">Delete</a>
             </td>
         </tr>
         {{/each}}
    </tbody>
</table>
<a class="btn btn-info" href="\task">Go Back</a>